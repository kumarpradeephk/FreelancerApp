<div class="center container">
	<h1 class="header jumbotron indexjumbotron">Welcome to home page</h1>

	<!-- other project -->
	<div class="container">
		<br/><h1>Other Projects</h1><br/>
		<div class="column root-container ">
			<% @all_projects.each do |skill, projects| %>
			<div class="row skill-container jumbotron">
				<div class="col-3 title well"><%= skill %></div>
				<div class="col-7"> 
					<% projects.each do |project| %>
					<div class="column desc-container">
						<div class="title"><%= project.project_name %></div> 
						<div><%= project.description %></div>
						<%if @current_user.work? && !project.isapplied %>
						<div> 
							<%= link_to "Apply for this project", url_for({action: "apply", params: {id: project.id}}),  data: {confirm: "Are you Sure?"}, class: 'btn btn-success' %>
						</div>
						<%elsif @current_user.hire? %>
						<a href="#" class='btn btn-primary disabled'>you can not apply</a>
						<%else%>
						<a href="#" class='btn btn-primary disabled'>Already taken</a>
						<%end%>
					</div>
					<%end%>
				</div>
				
			</div>
			<%end%>
		</div>
	</div>
	<!-- My project -->
	<% if logged_in? && @current_user.category == 'hire'%>
	<br/><h1>My Projects</h1><br/>
	<table class="table table-striped">
		<thead>
			<th>SKILLS</th>
			<th>PROJECT DESCRIPTIONS</th>
		</thead>
		<% @my_projects.each do |skill, description|%>
		<tbody>
			<tr>
				<td><%= skill %></td>
				<td><%= description %></td>
			</tr>
		</tbody>
		<% end %>
	</table>
	<% elsif logged_in? && @current_user.category == 'work'%>
	<br><%= link_to "view your applied Projects", applied_path, class: 'btn btn-info' %>
	<% else %>
	<%= link_to "Home", users_path %>
	<% end %>
</div>