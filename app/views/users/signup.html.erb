<h1>Welcome to Signup Page</h1>
<h4>Fill the form and click on Signup</h4>

<%= form_for @signup do |f| %>
	<p>
		<%= f.label :user_name %><br>
		<%= f.text_field :username %>
	</p>
	<p>
		<%= f.label :Email %><br>
		<%= f.email_field :email %>
	</p>
	<p>
		<%= f.label :password %><br>
		<%= f.password_field :password %>
	</p>
	<p>
    	<%= f.radio_button :category, 'hire' %> Hire<br />
    	<%= f.radio_button :category, 'work' %> Work<br />
	</p>
	<p>
		<%= f.submit "Signup", class: 'btn btn-primary btn-lg' %>
	</p>
<% end %>

<%= link_to "Home", users_path, class: 'btn btn-primary btn-lg' %>
