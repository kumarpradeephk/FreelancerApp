<div class="jumbotron container">
 	<h1 class="center header">Welcome to Login Page</h1><br>
	<div class="col-xl-12">
		<%= form_for @login, method: :post, url: url_for({action: "auth"}) do |f| %>
			<div class="form-group row">
				<div class="controll-label col-md-2">
					<%= f.label :user_name %>
				</div>
				<div class="col-md-10">
					<%= f.text_field :username, class: "form-control", placeholder: "enter username", autofocus: true, required:"true" %>
				</div>
			</div>
			<div class="form-group row">
				<div class="controll-label col-md-2">
					<%= f.label :password %>
				</div>
				<div class="col-md-10">
					<%= f.password_field :password, class: "form-control", placeholder: "enter password", autofocus: true, required:"true" %>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-md-10">
					<%= f.submit "Login", class: "btn btn-success btn-lg" %>
				</div>
			</div>
		<% end %>
	</div>
</div>

